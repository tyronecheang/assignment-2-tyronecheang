<%- include("templates/header", {
	title: "Admin" 
}) %>

	<div class="container mt-5">
		<h1 class="mb-4 text-center text-primary">Admin Menu</h1>
		<div class="table-responsive">
			<table class="table table-bordered table-striped">
				<thead class="table-dark">
					<tr>
						<th>Username</th>
						<th>Email</th>
						<th>Type</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<% users.forEach(function(user) { %>
						<tr class="<%= user.type === 'admin' ? 'table-success' : 'table-light' %>">
							<td>
								<%= user.username %>
							</td>
							<td>
								<%= user.email %>
							</td>
							<td>
								<span class="<%= user.type === 'admin' ? 'badge bg-danger' : 'badge bg-info' %>">
									<%= user.type || 'user' %>
								</span>
							</td>
							<td>
								<div class="d-flex gap-2">
									<% if (user.type==="admin" ) { %>
										<% if (user.email !==currentEmail) { %>
											<form action="/demote" method="POST">
												<input type="hidden" name="email" value="<%= user.email %>">
												<button type="submit" class="btn btn-warning btn-sm">Demote</button>
											</form>
											<% } else { %>
												<button class="btn btn-secondary btn-sm" disabled>Self</button>
												<% } %>
													<% } else { %>
														<form action="/promote" method="POST">
															<input type="hidden" name="email" value="<%= user.email %>">
															<button type="submit"
																class="btn btn-success btn-sm">Promote</button>
														</form>
														<% } %>
								</div>
							</td>
						</tr>
						<% }); %>
				</tbody>
			</table>
		</div>
		<a href="/" class="btn btn-primary mt-3">Back to Home</a>
	</div>

	<%- include("templates/footer") %>