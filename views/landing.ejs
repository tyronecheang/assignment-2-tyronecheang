<%- include("templates/header", {
    title: "Landing" 
}) %>

<div class="container d-flex justify-content-center align-items-start" style="min-height: 100vh;">
    <div class="text-center w-100">
        <% if(authenticated) { %>
            <h2>Hello, <%= username %>!</h2>
            <form action='/members' method='get' class="mb-3">
                <button type="submit" class="btn btn-primary">Go to Members Area</button>
            </form>
            <form action='/logout' method='get'>
                <button type="submit" class="btn btn-danger">Sign Out</button>
            </form>
        <% } else { %>
            <h2 class="mb-4">Welcome! Please Sign Up or Log In Here.</h2>
            <form action='/signup' method='get' class="mb-3">
                <button type="submit" class="btn btn-success">Sign Up</button>
            </form>
            <form action='/login' method='get'>
                <button type="submit" class="btn btn-info">Log In</button>
            </form>
        <% } %>
    </div>
</div>

<%- include("templates/footer") %>
